# ARC Environment Configuration Example
# Copy this file to .env and adjust values for your environment

# ============================================================================
# Environment
# ============================================================================
ARC_ENVIRONMENT=dev  # dev, test, or prod

# ============================================================================
# Directory Structure
# ============================================================================
ARC_HOME=/workspace/arc
# ARC_MEMORY_DIR=/workspace/arc/memory
# ARC_EXPERIMENTS_DIR=/workspace/arc/experiments
# ARC_LOGS_DIR=/workspace/arc/logs
# ARC_CHECKPOINTS_DIR=/workspace/arc/checkpoints
# ARC_SNAPSHOTS_DIR=/workspace/arc/snapshots

# ============================================================================
# LLM Configuration
# ============================================================================
ARC_LLM_ENDPOINT=http://localhost:8000/v1
ARC_LLM_MODEL=kimi
ARC_LLM_TIMEOUT=120
ARC_LLM_MAX_RETRIES=3
ARC_LLM_RETRY_DELAY=2.0

# ============================================================================
# Operating Mode & Safety
# ============================================================================
ARC_MODE=SEMI  # SEMI (safest), AUTO, FULL (dangerous), OFF
ARC_REQUIRE_APPROVAL_FOR_TRAIN=true
ARC_REQUIRE_APPROVAL_FOR_COMMANDS=true
ARC_MAX_CONCURRENT_EXPERIMENTS=1

# ============================================================================
# Training Configuration
# ============================================================================
ARC_DEFAULT_GPU_ID=0
ARC_MAX_TRAINING_TIME=7200

# ============================================================================
# Constraints
# ============================================================================
ARC_MAX_LEARNING_RATE=1.0
ARC_MIN_LEARNING_RATE=0.0000001
ARC_MIN_BATCH_SIZE=1
ARC_MAX_BATCH_SIZE=512

# ============================================================================
# Logging
# ============================================================================
ARC_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
ARC_LOG_FORMAT=json  # json or text
ARC_LOG_TO_FILE=true
ARC_LOG_TO_CONSOLE=true

# ============================================================================
# API Server
# ============================================================================
ARC_API_HOST=0.0.0.0
ARC_API_PORT=8080
ARC_API_DEBUG=false

# ============================================================================
# Historian & Memory
# ============================================================================
ARC_MAX_RECENT_EXPERIMENTS=50
ARC_STAGNATION_THRESHOLD=10
ARC_REGRESSION_THRESHOLD=3
