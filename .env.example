# MAGNET Configuration Environment Variables - Example
# Copy this file to .env and customize for your environment

# System Profile
MAGNET_PROFILE=local
MAGNET_ENVIRONMENT=development

# Directories
MAGNET_WORKSPACE_DIR=/path/to/MAGNETarc_demo
MAGNET_MEMORY_DIR=/path/to/MAGNETarc_demo/memory
MAGNET_EXPERIMENTS_DIR=/path/to/MAGNETarc_demo/results
MAGNET_LOGS_DIR=/path/to/MAGNETarc_demo/logs

# Model Configuration
MAGNET_LLM_ENDPOINT=http://localhost:8080/v1/completions
MAGNET_LLM_TIMEOUT=120
MAGNET_LLM_MAX_RETRIES=3
MAGNET_API_KEY=your-api-key-here

# Agent Configuration
MAGNET_CYCLE_DELAY=5
MAGNET_MAX_DESIGNS_PER_CYCLE=10

# Safety & Control
MAGNET_MODE=SEMI
MAGNET_REQUIRE_APPROVAL_FOR_EXPERIMENTS=false

# Logging
LOG_LEVEL=INFO

# =======================================================
# Database Configuration (Day 1 Infrastructure)
# =======================================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=magnet
POSTGRES_USER=magnet_user
POSTGRES_PASSWORD=magnet_dev_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=magnet_dev_password

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
