# MAGNET Configuration Environment Variables
# ===========================================
# Copy this file to .env and customize for your environment

# System Profile (2xA40, 1xA40, or mock)
MAGNET_PROFILE=2xA40

# Environment (dev, test, prod)
MAGNET_ENVIRONMENT=dev

# Directories
MAGNET_WORKSPACE_DIR=/workspace/magnet
MAGNET_MEMORY_DIR=/workspace/magnet/memory
MAGNET_EXPERIMENTS_DIR=/workspace/magnet/experiments
MAGNET_LOGS_DIR=/workspace/magnet/logs

# Model Configuration
MODEL_PATH=/workspace/models/deepseek-ai/DeepSeek-R1-Distill-Qwen-32B
MAGNET_LLM_MODEL=deepseek-ai/DeepSeek-R1-Distill-Qwen-32B
MAGNET_LLM_ENDPOINT=http://localhost:8000/v1/completions
MAGNET_LLM_TIMEOUT=120
MAGNET_LLM_MAX_RETRIES=3
MAGNET_LLM_QUANTIZATION=awq

# GPU Configuration
MAGNET_GPU_DEVICES=0,1
MAGNET_TENSOR_PARALLEL_SIZE=2
MAGNET_GPU_MEMORY_UTILIZATION=0.85
CUDA_VISIBLE_DEVICES=0,1

# vLLM Server
VLLM_PORT=8000
MAX_MODEL_LEN=8192

# Agent Configuration
MAGNET_CYCLE_DELAY=5
MAGNET_MAX_DESIGNS_PER_CYCLE=10
MAGNET_REQUIRE_LLM_VALIDATION=false

# Safety & Control
MAGNET_MODE=SEMI
MAGNET_REQUIRE_APPROVAL_FOR_EXPERIMENTS=false

# WebSocket (UI)
MAGNET_WEBSOCKET_PORT=8765
MAGNET_ENABLE_WEBSOCKET=true

# Logging
LOG_LEVEL=INFO

# Optional: Hugging Face Token (for model download)
# HF_TOKEN=your_token_here
